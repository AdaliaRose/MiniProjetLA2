<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="Bulletin" transaction-type="RESOURCE_LOCAL">
    <class>metier.Matiere</class>
    <class>metier.Note</class>
    <class>metier.Eleve</class>
    <class>metier.Professeur</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:derby://localhost:1527/bulletin"/>
      <property name="javax.persistence.jdbc.user" value="bulletin"/>
      <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.ClientDriver"/>
      <property name="javax.persistence.jdbc.password" value="bulletin"/>
    </properties>
  </persistence-unit>
</persistence>
